@page "{id:Guid}"
@model DeleteBlogPostModel
@{
	Layout = "_AdminLayout";
}
<h3>Are you sure you want to delete: @Model.BlogPost.Title? Once it has been deleted it cannot be recovered.</h3>
	<form method="post">
		<input type="hidden" asp-for="@Model.BlogPost.Id" />
		<input type="submit" value="Delete" class="btn btn-danger" /> |
		<a asp-page="./Admin">Cancel</a>
	</form>

