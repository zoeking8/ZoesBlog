@page
@model ZoesBlog.Pages.LoginModel
@{
	ViewData["Title"] = "Login";
	Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Login</h1>

<form class="login-page" method="post">
	<div class="form-group">
		<label>
			Email
			<input id="email"asp-for="userAccess.Email" class="form-control" placeholder="Email" type="email" />
		</label>
	</div>
	<div class="form-group">
		<label>
			Password
			<input id="password" asp-for="userAccess.Password" class="form-control" placeholder="Password" type="password" />
		</label>
	</div>
	<button id="login button" class="btn-danger" type="submit">Login</button>
</form>

