@page
@model ZoesBlog.Pages.LoginModel
@{
	ViewData["Title"] = "Login";
	Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Login</h1>

<form class="justify-content-center" method="post">
	<div class="form-group">
		<label>
			Email
			<input asp-for="userAccess.Email" aria-describedby="emailHelp" class="form-control" placeholder="Email" type="email" />
		</label>
	</div>
	<div class="form-group">
		<label>
			Password
			<input asp-for="userAccess.Password" aria-describedby="passwordHelp" class="form-control" placeholder="Password" type="password" />
		</label>
	</div>
	<button class="btn btn-primary" type="submit">Login</button>
</form>