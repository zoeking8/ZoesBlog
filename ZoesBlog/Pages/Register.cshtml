@page
@model ZoesBlog.Pages.RegisterModel
@{
	ViewData["Title"] = "Register";
	Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Register</h1>

<form class="justify-content-center" method="post">
	<div class="form-group">
		<label>
			Email
			<input asp-for="RegisterAccess.Email" aria-describedby="emailHelp" class="form-control" placeholder="Email" type="email" />
		</label>
	</div>
	<div class="form-group">
		<label>
			Username
			<input asp-for="RegisterAccess.Username" aria-describedby="usernameHelp" class="form-control" placeholder="Username" type="text" />
		</label>
	</div>
	<div class="form-group">
		<label>
			Password
			<input asp-for="RegisterAccess.Password" aria-describedby="passwordHelp" class="form-control" placeholder="Password" type="password" />
		</label>
	</div>
	<button class="btn btn-primary" type="submit">Register</button>
</form>
